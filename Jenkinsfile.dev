pipeline {
    agent any
    
    environment {
        IMAGE_NAME = 'hmm-model-training-dev'
        IMAGE_TAG = "${env.BRANCH_NAME}-${env.BUILD_NUMBER}-${env.GIT_COMMIT.take(7)}"
        KIND_CLUSTER = 'trading-cluster'
        NAMESPACE = 'trading-monitoring-dev'
        JOB_NAME = 'hmm-model-calibration-dev'
        BRANCH_NAME = 'dev'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    env.GIT_COMMIT_SHORT = sh(
                        script: 'git rev-parse --short HEAD',
                        returnStdout: true
                    ).trim()
                    env.GIT_BRANCH = sh(
                        script: 'git rev-parse --abbrev-ref HEAD',
                        returnStdout: true
                    ).trim()
                    env.IMAGE_TAG = "${env.BRANCH_NAME}-${env.BUILD_NUMBER}-${env.GIT_COMMIT_SHORT}"
                    echo "Building for branch: ${env.GIT_BRANCH}"
                    echo "Image tag: ${env.IMAGE_TAG}"
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image for DEV: ${IMAGE_NAME}:${IMAGE_TAG}"
                    sh """
                        docker build \
                            -f .ops/.kubernetes/Dockerfile.model-training \
                            -t ${IMAGE_NAME}:${IMAGE_TAG} \
                            -t ${IMAGE_NAME}:${env.BRANCH_NAME}-latest \
                            .
                    """
                }
            }
        }
        
        stage('Load Image into Kind Cluster') {
            steps {
                script {
                    echo "Loading DEV image into kind cluster: ${KIND_CLUSTER}"
                    sh """
                        kind load docker-image ${IMAGE_NAME}:${IMAGE_TAG} --name ${KIND_CLUSTER}
                        kind load docker-image ${IMAGE_NAME}:${env.BRANCH_NAME}-latest --name ${KIND_CLUSTER}
                    """
                }
            }
        }
        
        stage('Create Namespace (if needed)') {
            steps {
                script {
                    echo "Ensuring namespace ${NAMESPACE} exists"
                    sh """
                        kubectl create namespace ${NAMESPACE} --context kind-trading-cluster 2>/dev/null || echo "Namespace ${NAMESPACE} already exists"
                    """
                }
            }
        }
        
        stage('Update Kubernetes Job') {
            steps {
                script {
                    echo "Updating Kubernetes Job for DEV with new image"
                    sh """
                        # Set the image in the job (if it exists)
                        kubectl set image job/${JOB_NAME} \
                            model-training=${IMAGE_NAME}:${IMAGE_TAG} \
                            -n ${NAMESPACE} \
                            --context kind-trading-cluster \
                            2>/dev/null || echo "Job doesn't exist yet, will be created on apply"
                        
                        # Apply the job manifest (will create or update)
                        # Note: You may need a dev-specific job manifest file
                        kubectl apply -f .ops/.kubernetes/hmm-model-training-job.yaml -n ${NAMESPACE} --context kind-trading-cluster || echo "Using default job manifest"
                    """
                }
            }
        }
        
        stage('Verify Deployment') {
            steps {
                script {
                    echo "Verifying DEV job deployment"
                    sh """
                        kubectl get job ${JOB_NAME} -n ${NAMESPACE} --context kind-trading-cluster || true
                        kubectl get pods -l app=hmm-model,component=training -n ${NAMESPACE} --context kind-trading-cluster || true
                    """
                }
            }
        }
    }
    
    post {
        success {
            echo "✓ DEV Pipeline succeeded! Image ${IMAGE_NAME}:${IMAGE_TAG} deployed to ${KIND_CLUSTER}"
        }
        failure {
            echo "✗ DEV Pipeline failed. Check logs for details."
        }
        always {
            // Clean up old dev images (optional - keep last 10 builds)
            sh """
                docker images ${IMAGE_NAME} --format '{{.Tag}}' | \\
                    grep -E '^dev-[0-9]+-' | \\
                    sort -t- -k2 -nr | \\
                    tail -n +11 | \\
                    xargs -r -I {} docker rmi ${IMAGE_NAME}:{} || true
            """
        }
    }
}

