{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "BLS - Generate Parquet Database",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/bls/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--generate-parquet",
                "${workspaceFolder}/src/trading_agent/macro_model/bls/bls_parquet"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "BLS - Download Specific Series",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/bls/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--series",
                "CUUR0000SA0",
                "SUUR0000SA0",
                "--start-year",
                "2020",
                "--end-year",
                "2024",
                "--format",
                "both",
                "--output-dir",
                "${workspaceFolder}/src/trading_agent/macro_model/bls/data"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "BLS - List Surveys",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/bls/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--list-surveys"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
