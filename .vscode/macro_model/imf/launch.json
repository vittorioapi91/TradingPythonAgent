{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "IMF - Generate Parquet Database (IFS)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/imf/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--database",
                "IFS",
                "--generate-parquet",
                "${workspaceFolder}/src/trading_agent/macro_model/imf/imf_parquet"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "IMF - Download from Parquet",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/imf/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--from-parquet",
                "${workspaceFolder}/src/trading_agent/macro_model/imf/imf_parquet",
                "--output-dir",
                "${workspaceFolder}/src/trading_agent/macro_model/imf/data",
                "--format",
                "both"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "IMF - Download Specific Indicators",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/imf/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--database",
                "IFS",
                "--series",
                "NGDP_RPCH",
                "NGDPD",
                "--format",
                "both",
                "--output-dir",
                "${workspaceFolder}/src/trading_agent/macro_model/imf/data"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "IMF - List Databases",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/imf/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--list-databases"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "IMF - List Indicators (IFS)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/trading_agent/macro_model/imf/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--database",
                "IFS",
                "--list-indicators"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}
