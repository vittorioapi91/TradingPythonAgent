{
  "dashboard": {
    "title": "HMM Regime Analysis",
    "tags": ["hmm", "regime", "analysis"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "1m",
    "panels": [
      {
        "id": 1,
        "title": "Regime Transitions Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "hmm_regime_distribution",
            "legendFormat": "Regime {{regime}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Regime Duration Statistics",
        "type": "table",
        "targets": [
          {
            "expr": "hmm_regime_distribution",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10}
      },
      {
        "id": 3,
        "title": "Current Regime",
        "type": "stat",
        "targets": [
          {
            "expr": "hmm_regime_distribution",
            "format": "table",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10}
      }
    ]
  }
}

